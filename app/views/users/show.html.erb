<h2><%= @user.name %>'s Saved Workouts: </h2>
<ul>
<% @user.user_saved_workouts.each do |user_saved_workout| %>
  <li>
    <h2><%= link_to(title(user_saved_workout), workout_path(user_saved_workout.saved_workout)) %></h2>
    <%= link_to('Edit Saved Workout', edit_workout_user_saved_workout_path(user_saved_workout.saved_workout, user_saved_workout)) if current_users_saved_workout?(user_saved_workout) %>
    <%= link_to('Unsave', workout_user_saved_workout_path(user_saved_workout.saved_workout, user_saved_workout), method: :delete) if current_users_saved_workout?(user_saved_workout) %>
    <p>By: <%= link_to(user_name(user_saved_workout), user_path(user_saved_workout.saved_workout.user)) %></p>
    <p><%= saved_workout_description(user_saved_workout) %></p>
  </li>
<% end %>
</ul>